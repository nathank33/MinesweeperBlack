<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Black.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        
    </style>
    
    <style name="AppTheme.ButtonStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>
            
    <style name="AppTheme.SpinnerStyle">
        <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:gravity">center_vertical</item>
	    <item name="android:height">@dimen/spinner_height</item>
	    <item name="android:padding">@dimen/spinner_padding</item>
	    <item name="android:textColor">@color/spinner_text</item>
	    <item name="android:textSize">@dimen/spinner_textsize</item>
    </style>
    
</resources>
